#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  exec "$basedir/-S" node --experimental-vm-modules --no-warnings "$basedir/../peggy/bin/peggy.js" "$@"
else 
  exec -S node --experimental-vm-modules --no-warnings "$basedir/../peggy/bin/peggy.js" "$@"
fi
